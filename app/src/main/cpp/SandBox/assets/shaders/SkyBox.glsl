#type vertex
#version 430 core
layout(location = 0) in vec3 aPos;
out vec3 TexCoords;
		
uniform mat4 u_Model;
//uniform mat4 u_ProjectionView;
uniform mat4 u_Projection;
uniform mat4 u_View;

void main()
{
	TexCoords = aPos;
	vec4 pos = u_Projection*mat4(mat3(u_View))*vec4(aPos,1.0);
	gl_Position = pos.xyww;
}



